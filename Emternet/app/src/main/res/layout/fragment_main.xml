<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_aii_00_00"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <Button
        android:id="@+id/button_sad"
        android:layout_width="159dp"
        android:layout_height="101dp"
        android:layout_marginStart="140dp"
        android:layout_marginBottom="8dp"
        android:background="#00000000"
        app:layout_constraintBottom_toTopOf="@+id/button_angry"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_angry"
        android:layout_width="173dp"
        android:layout_height="97dp"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="19dp"
        android:background="#00000000"
        app:layout_constraintBottom_toTopOf="@+id/button_happy"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_normal"
        android:layout_width="148dp"
        android:layout_height="88dp"
        android:layout_marginStart="23dp"
        android:layout_marginBottom="8dp"
        android:background="#00000000"
        app:layout_constraintBottom_toTopOf="@+id/button_disgust"
        app:layout_constraintStart_toEndOf="@+id/button_angry" />

    <Button
        android:id="@+id/button_happy"
        android:layout_width="192dp"
        android:layout_height="130dp"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="124dp"
        android:background="#00000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_disgust"
        android:layout_width="179dp"
        android:layout_height="135dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="124dp"
        android:background="#00000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_happy" />
</androidx.constraintlayout.widget.ConstraintLayout>