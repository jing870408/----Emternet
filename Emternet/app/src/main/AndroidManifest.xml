<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.emternet">

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        >

        <activity android:name=".emo_list" android:screenOrientation="portrait"></activity>
        <activity android:name=".ui.notifications.page_developer" android:screenOrientation="portrait"></activity>
        <activity android:name=".ui.notifications.page_contactus" android:screenOrientation="portrait"></activity>
        <activity android:name=".ui.notifications.page_problem" android:screenOrientation="portrait"></activity>
        <activity android:name=".ui.notifications.page_instructions" android:screenOrientation="portrait"></activity>
        <activity android:name=".Chating" android:windowSoftInputMode="adjustResize"></activity>
        <activity android:name=".ui.normal_island" android:screenOrientation="portrait"></activity>
        <activity android:name=".ui.happy_island" android:screenOrientation="portrait"></activity>
        <activity android:name=".ui.disgust_island" android:screenOrientation="portrait"></activity>
        <activity android:name=".ui.sad_island" android:screenOrientation="portrait"></activity>
        <activity android:name=".ui.angry_island" android:screenOrientation="portrait"></activity>
        <activity android:name=".Regist" android:screenOrientation="portrait"></activity>
        <activity
            android:name=".Island"
            android:label="@string/title_activity_island"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".MainActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>



    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

</manifest>